<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="gflogger" default="jar">
	
	<property name="build.dir" value="build"/>
	<path id="jars">
		<fileset dir="libs" includes="**/*.jar"/>
	</path>
	
	<target name="clear">
		<delete dir="${build.dir}"/>
	</target>

	<target name="compile">
		<mkdir dir="${build.dir}"/>
		
		<javac destdir="${build.dir}"
			includeantruntime="false">
			<src path="src"/>
		</javac>
		
		<javac destdir="${build.dir}"
			classpathref="jars"
			includeantruntime="false">
			<src path="log4j"/>	
		</javac>

		<copy todir="${build.dir}">
			<fileset dir="src" includes="**/*.xml"/>
			<fileset dir="log4j" includes="**/*.xml"/>
		</copy>
	</target>
	
	<target name="jar" depends="clear, compile">
		<jar destfile="libs/gflogger.jar">
			<fileset dir="${build.dir}">
				<include name="**/*.class"/>
				<include name="**/*.xml"/>
			</fileset>
		</jar>
	</target>
	
</project>
