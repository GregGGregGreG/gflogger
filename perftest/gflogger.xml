<?xml version="1.0" encoding="UTF-8"?>
<configuration 
	xmlns="http://bitbucket.org/vladimir.dolzhenko/gflogger"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://bitbucket.org/vladimir.dolzhenko/gflogger 
		https://bitbucket.org/vladimir.dolzhenko/gflogger/raw/0.0.9.6/src/gflogger.xsd">

	<appender-factory name="consoleAppenderFactory" class="gflogger.appender.ConsoleAppenderFactory"
		logLevel="INFO">
		<layout class="gflogger.PatternLayout"
			pattern="%d{MMM d HH:mm:ss,SSS zzz} %p - %m [%c{2}] [%t]%n"
			timeZoneId="${TZ}"
			language="EN"/>
	</appender-factory>

	<appender-factory name="dailyRollingFileAppenderFactory" class="gflogger.appender.DailyRollingFileAppenderFactory"
		fileName="${logs}/${app}.log"
		logLevel="INFO">
		<layout class="gflogger.PatternLayout"
			pattern="%d{MMM d HH:mm:ss,SSS zzz} %p - %m [%c{2}] [%t]%n"
			timeZoneId="${TZ}"
			language="EN"/>
	</appender-factory>

	  
	<logger-service name="defaultLoggerService" 
		class="gflogger.config.xml.DLoggerServiceFactory" 
		count="1024" maxMessageSize="4096">
		<object-formatter 
			class="perftest.SomeObject"
			formatter="perftest.SomeObjectFormatter"/>
		
		<appender-ref name="consoleAppenderFactory"/>
		<appender-ref name="dailyRollingFileAppenderFactory"/>
	</logger-service>
	
	<logger-view name="com.db" 
		service-ref="defaultLoggerService" logLevel="INFO"/>
		
	<logger-view-root 
		service-ref="defaultLoggerService" logLevel="ERROR"/>

</configuration>